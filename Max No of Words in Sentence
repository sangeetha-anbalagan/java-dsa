//Below code for to find max words in  More than one sentences in Array
class Solution {
    public int mostWordsFound(String[] sentences) {
        int max=0;
        for(String s:sentences){
            int word=s.split(" ").length;
            if(word>0){
                if(word>max){
                    max=word;
                    }
            }
        }
        return max;
    }
}

//this Below code find max word in one sentence
class Solution {
    public int mostWordsFound(String[] sentences) {
        int max=0;
        for(String s:sentences){
            int word=s.split(" ").length;
            if(word>0){
              max=word;
            }       
        }
        return max;
    }
}
